// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  name String
  id Int @id
  avatar String
  blocked_users Int[] @default([])
  friend_users Int[] @default([])
  channels String[] @default([])
  connected Boolean @default(true)
  in_game Boolean @default(false)
  game_id Int?

  otp_enabled Boolean @default(false)
  otp_verified Boolean @default(false)

  otp_ascii String?
  otp_hex   String?
  //protect otp base fro future api calls
  otp_base32  String?
  otp_auth_url  String?
}

model Message {
  id Int @id @default(autoincrement())
  uid Int
  text String
  sender_id Int
  name String
  type Int
}

model MuteInfo {
  id Int @id @default(autoincrement())
  userId Int
  muteTime DateTime
  channelName String
  channel Channel @relation("MutedChannel", fields: [channelName], references: [name])
}

model Channel {
  name String @id
  password String?

  members Int[] @default([])
  operators Int[]
  banned Int[] @default([])
  owner Int

  messages Int[] @default([])
  curr_uid Int @default(0)

  mutedUsers MuteInfo[] @relation("MutedChannel")
}
