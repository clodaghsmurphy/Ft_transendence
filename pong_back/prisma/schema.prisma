// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  name String
  id Int @id @unique
  avatar String
  avatar_path String

  stats Stats?
  achievements Achievements[]

  blocked_users Int[] @default([])
  friend_users Int[] @default([])
  channels String[] @default([])

  connected Boolean @default(true)
  in_game Boolean @default(false)

  game_id Int?
  past_games Int[] @default([])

  messages_sent PrivateMessage[] @relation("SentMessages")
  messages_received PrivateMessage[] @relation("ReceivedMessages")

  otp_enabled Boolean @default(false)
  otp_verified Boolean @default(false)

  //protect otp base fro future api calls
  otp_base32  String?
  otp_auth_url  String?
}

model Message {
  id Int @id @default(autoincrement())
  uid Int
  text String
  sender_id Int
  name String
  type Int
}

model PrivateMessage {
  id Int @id @default(autoincrement())
  created_at DateTime @default(now())
  text String
  sender_id Int
  receiver_id Int
  sender User @relation("SentMessages", fields: [sender_id], references: [id])
  receiver User @relation("ReceivedMessages", fields: [receiver_id], references: [id])
}

model MuteInfo {
  id Int @id @default(autoincrement())
  userId Int
  muteTime DateTime
  channelName String
  channel Channel @relation("MutedChannel", fields: [channelName], references: [name])
}

model Channel {
  name String @id
  is_public Boolean
  password String?

  members Int[] @default([])
  operators Int[]
  banned Int[] @default([])
  owner Int

  messages Int[] @default([])
  curr_uid Int @default(0)

  mutedUsers MuteInfo[] @relation("MutedChannel")
}

model Game {
  id Int @id @default(autoincrement())

  ongoing Boolean @default(true)

  player1 Int
  player2 Int
}

model Stats {
  id Int @id  @default(autoincrement())
  userId  Int @unique
  User User @relation(fields: [userId], references: [id])
  wins  Int @default(0)
  total_games Int @default(0)
  total_spe_games Int @default(0)
  lvl Int @default(1)
  points  Int @default(0)
}

model Achievements {
  id Int @id  @default(autoincrement())
  achievement_id Int
  userId  Int 
  User User @relation(fields: [userId], references: [id])
  icon String
  title String
  cap Int
  score Int
}
